@model IEnumerable<HRSystem.Models.PermissionRequest>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "ManagerRequests";
    HRSystem.Manager.Helper helperx = new HRSystem.Manager.Helper();
    HRSystem.Manager.RequestManager mngr = new HRSystem.Manager.RequestManager();
}

<h2>Manager Requests</h2>



<table id="assets-data-table" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Employee
            </th>
            
            <th>
                Position
            </th>
            
            <th>
                Request Date
            </th>
            
            <th>
                Permission Date
            </th>
            
            <th>
                Permission Type
            </th>
            
            <th>
                Note
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(e => e.ManagerApprovement == false && e.LeaderApprovement == true && e.IsRejected == false).ToList())
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Position.PositionNameEn)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDate)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.PermissionDate)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.PermissionType.Type)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                
                <td>
                    @Html.ActionLink("Approve", "ManagerApprove", new { id = item.Id }) |
                    @Html.ActionLink("Reject", "Reject", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", "PermissionRequest", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
