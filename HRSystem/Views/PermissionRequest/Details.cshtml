@model HRSystem.Models.PermissionRequest
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = Resources.NubiHR.Details;
    HRSystem.Manager.Helper helperx = new HRSystem.Manager.Helper();
    HRSystem.Manager.RequestManager mngr = new HRSystem.Manager.RequestManager();
    var IsArabic = Request.Cookies["culture"].Value == "ar" ? true : false;
}

<h2>@Resources.NubiHR.Details</h2>



<div class="form-group">
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.EmployeeName
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.Employee.FirstName) @Html.DisplayFor(modelItem => Model.Employee.LastName)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.Position
        </label>
        <div class="col-md-6">
            @if (IsArabic)
            {
                    @Html.DisplayFor(modelItem => Model.Employee.Position.PositionNameAr)
            }
            else
            {
                    @Html.DisplayFor(modelItem => Model.Employee.Position.PositionNameEn)
            }
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.RequestDate
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.RequestDate)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.PermissionDate
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.PermissionDate)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.PermissionType
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.PermissionType.Type)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.TimeFrom
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.TimeFromHours)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            Time To
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.TimeToHours)
        </div>
    </div>
    <div class="row">
        <label class="control-label col-md-3">
            @Resources.NubiHR.Notes
        </label>
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => Model.Note)
        </div>
    </div>
    <br />
    <div>
        <a href="@Url.Action("Index")" class="btn-Back" style="color:white; text-decoration: none;">@Resources.NubiHR.Back</a>
    </div>
</div>
