@model HRSystem.Models.PermissionType
@{
    ViewBag.Title = "Edit";
}

<h2>@Resources.NubiHR.Edit</h2>
@using (Html.BeginForm(null, null, FormMethod.Post))
{
    <div class="form-group">
        <div>
            @Resources.NubiHR.PermissionType
        </div>
        <div>
            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
        <div>
            <a href="@Url.Action("PermissionType","Index")" class="btn btn-default">@Resources.NubiHR.Back</a>

            <input type="submit" value=@Resources.NubiHR.Send class="btn btn-primary" />
        </div>
    </div>
}
