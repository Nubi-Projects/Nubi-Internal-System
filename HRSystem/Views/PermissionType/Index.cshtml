@model IEnumerable<HRSystem.Models.PermissionType>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="@Url.Action("Create")">اضافة</a>


<table id="assets-data-table" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Resources.NubiHR.PermissionType
            </th>

            <th>
                @Resources.NubiHR.Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(e => e.IsDeleted == false).ToList())
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |

                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
