@model IEnumerable< HRSystem.Models.VMAddEmployee>
@{
    ViewBag.Title = Resources.NubiHR.EmployeeDetails;
    var count = 1;
    var IsArabic = Request.Cookies["culture"].Value == "ar" ? true : false ;
}

<br />

<div>
    <p>
    @Html.ActionLink(Resources.NubiHR.BackTolist, "Index", "Employee")
        </p>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">@Resources.NubiHR.EmployeeDetails</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                 
                    @foreach (var item in Model.Where(y => y.IsDeletedEmployee == false))
                    {
                        <tr>
                                @Html.ActionLink(Resources.NubiHR.Edit, "Edit", new { id = item.IdEmployee, employee = item.FirstName + " " + item.LastName }) 
                            
                        </tr>

                        <tr>
                            <th>
                                @Resources.NubiHR.StartDate
                            </th>
                            <td>
                                @item.StartDate
                            </td>
                            

                        </tr>




                        <tr>
                            <th>
                               @Resources.NubiHR.EmployeeName
                            </th>
                            <td>
                                @item.FirstName @item.LastName
                            </td>
                            
                            </tr>
                            


                            @*<tr>
                                <th>
                                    @Resources.NubiHR.Role
                                </th>
                                @if (IsArabic)
                                {
                                <td>
                                    @item.Department.DepartmentNameAr
                                </td>
                                 }

                                else
                                {
                                <td>
                                    @item.Department.DepartmentNameEn
                                </td>
                                
                                }

                            </tr>*@



                            <tr>
                                <th>
                                    @Resources.NubiHR.Email
                                </th>
                                <td>
                                    @item.EmailEmployee
                                </td>
                               

                            </tr>



                            <tr>
                                <th>
                                    @Resources.NubiHR.Address
                                </th>
                                <td>
                                    @item.Address
                                </td>
                               

                            </tr>



                            <tr>
                                <th>
                                    @Resources.NubiHR.Mobile
                                </th>
                                <td>
                                    @item.Mobile1
                                </td>
                                

                            </tr>



                            <tr>
                                <th>
                                    @Resources.NubiHR.Mobile2
                                </th>
                                <td>
                                    @item.Mobile2
                                </td>
                                

                            </tr>
                            


                            <tr>
                                <th>
                                    @Resources.NubiHR.FunctionalNumber
                                </th>
                                <td>
                                    @item.FunctionalNumber
                                </td>
                            </tr>



                            <tr>
                                <th>
                                    @Resources.NubiHR.Department
                                </th>
                                @if (IsArabic)
                                {
                                    <td>
                                        @item.DepartmentNameAr
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @item.DepartmentNameEn
                                    </td>
                                }
                                
                            </tr>


                            <tr>
                                <th>
                                    @Resources.NubiHR.Position
                                </th>
                                @if (IsArabic)
                                {
                                    <td>
                                        @item.PositionNameAr
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @item.PositionNameEn
                                    </td>
                                }
                                
                            </tr>


                            <tr>
                                <th>
                                    @Resources.NubiHR.Salary
                                </th>
                                <td>
                                    @item.BasicSalary
                                </td>
                            </tr>


                            <tr>
                                <th>
                                    @Resources.NubiHR.Bonus
                                </th>
                                <td>
                                    @item.Bonus
                                </td>
                            </tr>


                        if (item.IdBank != null)
                        {
                            <tr>
                                <th>
                                    @Resources.NubiHR.AccountNumber
                                </th>
                                <td>
                                    @item.AccountNumber
                                </td>
                            </tr>



                            <tr>
                                <th>
                                    @Resources.NubiHR.BankName
                                </th>
                                <td>
                                    @item.BankName
                                </td>
                            </tr>


                            <tr>
                                <th>
                                    @Resources.NubiHR.BankBranch
                                </th>
                                <td>
                                    @item.BankBranch
                                </td>
                            </tr>
                        }


                            @*<tr>
                                <th>
                                    @Resources.NubiHR.NationalID
                                </th>
                                <td>
                                   <a href="@item.Attachment.NationalId"> @item.FirstName @item.LastName @Resources.NubiHR.NationalID </a> 
                                   
                                </td>
                            </tr>*@

                        
                            @*<tr>
                                <th>
                                    @Resources.NubiHR.PassportNumber
                                </th>
                                <td>
                                    <a href="@item.Attachment.PassportNumber"> @item.FirstName @item.LastName @Resources.NubiHR.PassportNumber </a>

                                </td>
                            </tr>*@
                       

                            @*<tr>
                                <th>
                                   @Resources.NubiHR.LastCertificate
                                </th>
                                <td>
                                    <a href="@item.Attachment.LastCertificate"> @item.FirstName @item.LastName @Resources.NubiHR.LastCertificate </a>

                                </td>
                            </tr>*@

                            @*<tr>
                                <th>
                                    @Resources.NubiHR.Image
                                </th>
                                <td>
                                    <a href="@item.Attachment.ImageUrl"> @item.FirstName @item.LastName @Resources.NubiHR.Image </a>

                                </td>
                            </tr>*@

                        foreach (var item1 in Model.Select(q => q.AttachmentList))
                        {
                            <tr>
                                <th>
                                    @Resources.NubiHR.TrainingCertificate @count 
                                </th>
                                <td>
                                    <a href="@item1.Select(r => r.Path))"> @item1.Select(r => r.Name)</a>

                                </td>
                                <td>
                                    @item1.Select(r => r.TypeOfAttachmentNo)

                                </td>
                            </tr>
                            count++;    
                        }

                    }

                </table>

            </div>
        </div>
    </div>
</div>



@if (ViewBag.ForgetPassword != null)
{
    <script type="text/javascript">
            window.onload = function () {
                //alert("@ViewBag.Message");
                swal(`Hello Admin`,`@ViewBag.Message`,`success`);
            };
    </script>
}

<div>
    @Html.ActionLink(Resources.NubiHR.BackTolist, "Index", "Employee")
</div>
