@model HRSystem.Models.VacationRequest
@{
    ViewBag.Title = "Details";
    var IsArabic = Request.Cookies["culture"].Value == "ar" ? true : false;
    HRSystem.Models.NubiDBEntities Db = new HRSystem.Models.NubiDBEntities();
    var AlternativeEmpName = Db.Employees.Where(x => x.Id == Model.AlternativeEmp).Select(x => x.FirstName + " " + x.LastName).FirstOrDefault();

}


<h2>@Resources.NubiHR.Details</h2>


   <div class="form-group">
    <table class="table" style="width:50%">
        <thead>
            <tr></tr>
        </thead>
        <tbody>
            <tr>
                <td>@Resources.NubiHR.EmployeeName</td>
                <td>@Html.DisplayFor(modelItem => Model.Employee.FirstName) @Html.DisplayFor(modelItem => Model.Employee.LastName)</td>

            </tr>
            <tr>
                <td>@Resources.NubiHR.Position</td>
                <td>
                    @if (IsArabic)
                    {
                        @Html.DisplayFor(modelItem => Model.Employee.Position.PositionNameAr)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => Model.Employee.Position.PositionNameEn)
                    }
                </td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.RequestDate</td>
                <td>@Html.DisplayFor(modelItem => Model.RequestDate)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.VacationType</td>
                <td>@Html.DisplayFor(modelItem => Model.VacationType.Type)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.Duration</td>
                <td>@Html.DisplayFor(modelItem => Model.Duration)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.StartDate</td>
                <td>@Html.DisplayFor(modelItem => Model.StartDate)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.EndDate</td>
                <td>@Html.DisplayFor(modelItem => Model.EndDate)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.ResumeDate</td>
                <td>@Html.DisplayFor(modelItem => Model.ResumeDate)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.AlternativeEmp</td>
                <td>@Html.DisplayFor(modelItem => AlternativeEmpName)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.Address</td>
                <td>@Html.DisplayFor(modelItem => Model.Address)</td>
            </tr>
            <tr>
                <td>@Resources.NubiHR.Notes</td>
                <td>@Html.DisplayFor(modelItem => Model.Note)</td>
            </tr>

        </tbody>
    </table>
</div>

